<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_container_intro"
    android:background="@drawable/coinpile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_manage"
        android:text="Manage"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="250dp"
        android:textSize="50dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_your"
        android:text="Your"
        android:layout_marginLeft="250dp"
        android:textSize="50dp"
        android:layout_below="@id/app_manage"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_money"
        android:layout_marginLeft="250dp"
        android:text="Money"
        android:textSize="50dp"
        android:layout_below="@id/app_your"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_wisely"
        android:layout_marginLeft="250dp"
        android:textSize="50dp"
        android:text="Wisely"
        android:layout_below="@id/app_money"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/creator_name"
        android:layout_alignParentBottom="true"
        android:textSize="30dp"
        android:text="Joao Pimentel"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"/>

</RelativeLayout>
